---
import { Image } from "astro:assets";

interface Props {
  href: string;
  title: string;
  description: string;
  action: string;
  image: ImageMetadata;
}

const { href, title, description, action, image } = Astro.props;
---

<a
  href={href}
  class="group flex flex-col max-w-[720px] border lg:border-r-0 lg:last:border-r"
>
  <Image
    src={image}
    alt={title}
    loading="eager"
    class="group-hover:shadow-2xl transition-shadow duration-[250ms] w-full"
  />
  <div
    class="flex flex-col gap-4 p-6 group-hover:bg-mcmaster-maroon group-hover:text-white transition-colors duration-[250ms] flex-grow"
  >
    <h2 class="text-2xl font-bold">
      {title}
    </h2>
    <div
      class="w-10 h-1 bg-mcmaster-maroon group-hover:bg-mcmaster-gold transition-colors duration-[250ms]"
    >
    </div>
    <p
      class="text-nevada group-hover:text-white transition-colors duration-[250ms]"
    >
      {description}
    </p>
    <div class="flex justify-between items-center mt-auto">
      <span class="font-medium text-lg">{action}</span>
      <svg
        class="rounded-full p-1 size-5 -translate-x-3 group-hover:translate-x-0 transition-all duration-[250ms] bg-mcmaster-maroon text-white group-hover:bg-mcmaster-gold group-hover:text-black"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 5l7 7-7 7"></path>
      </svg>
    </div>
  </div>
</a>
