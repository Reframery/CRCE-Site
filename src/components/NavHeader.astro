---
import { Icon } from "astro-icon/components"
import SearchButton from "./SearchButton.astro"
---

<header
  class="flex items-center justify-between gap-x-12 gap-y-4 bg-gradient-to-b from-white from-85% to-nevada/20 px-6 py-6 pb-4 max-md:flex-wrap sm:px-8 md:px-12 md:py-8 md:pb-5 lg:px-16"
>
  <a href="https://www.mcmaster.ca/" rel="noopener noreferrer" target="_blank">
    <Icon name="mcmaster-logo" class="h-20 w-[144px]" />
  </a>
  <Icon
    name="mdtrc-header"
    class="relative h-[69px] w-[324px] max-md:order-last max-md:mx-auto md:-top-1"
  />
  <section class="flex items-center gap-4 text-nevada">
    <SearchButton />
    <button class="flex flex-col items-center p-2 text-lg font-medium">
      <Icon name="lucide:menu" size={32} />
      Menu
    </button>
  </section>
</header>
