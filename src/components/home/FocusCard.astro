---
import { Image } from "astro:assets"

interface Props {
  href: string
  title: string
  description: string
  action: string
  image: ImageMetadata
}

const { href, title, description, action, image } = Astro.props
---

<a href={href} class="group flex max-w-[620px] flex-col border">
  <div
    class="relative overflow-hidden transition-shadow duration-300 group-hover:shadow-2xl"
  >
    <Image
      src={image}
      alt={title}
      loading="eager"
      class="scale-105 transition-transform duration-300 group-hover:scale-100"
    />
    <div
      class="absolute bottom-0 z-10 h-[1px] w-full bg-[#e5e7eb] transition-colors duration-300 group-hover:bg-maroon"
    >
    </div>
  </div>
  <div
    class="flex flex-grow flex-col gap-4 bg-white p-6 transition-colors duration-300 group-hover:bg-maroon group-hover:text-white"
  >
    <h2 class="text-2xl font-bold">
      {title}
    </h2>
    <div
      class="h-1 w-10 bg-maroon transition-colors duration-300 group-hover:bg-gold"
    >
    </div>
    <p
      class="text-nevada transition-colors duration-300 group-hover:text-white"
    >
      {description}
    </p>
    <div class="mt-auto flex items-center justify-between">
      <span class="font-sans-condensed text-lg">{action}</span>
      <svg
        class="size-5 -translate-x-3 rounded-full bg-maroon p-1 text-white transition-all duration-300 group-hover:translate-x-0 group-hover:bg-gold group-hover:text-foreground"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 5l7 7-7 7"></path>
      </svg>
    </div>
  </div>
</a>
